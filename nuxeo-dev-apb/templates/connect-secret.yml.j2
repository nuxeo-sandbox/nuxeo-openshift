---
apiVersion: v1
kind: Secret
type: Opaque
metadata:
  labels:
    app: {{ app_name }}
    apb_name: '{{ apb_name }}'
    apb_plan_id: '{{ _apb_plan_id }}'
    apb_service_class_id: '{{ _apb_service_class_id }}'
    apb_service_instance_id: '{{ _apb_service_instance_id }}'
    component: {{ component }}
  name: "{{ connect_secret_name }}"
  namespace: {{ namespace }}
stringData:
  connect.properties: |-
    NUXEO_STUDIO_PROJECT={{ nuxeo_studio_project }}
{% if nuxeo_studio_version is defined %}
    NUXEO_STUDIO_PROJECT_VERSION={{ nuxeo_studio_version }}
{% endif %}
    NUXEO_CONNECT_USERNAME={{ nuxeo_connect_username }}
    NUXEO_CONNECT_PASSWORD={{ nuxeo_connect_token }}