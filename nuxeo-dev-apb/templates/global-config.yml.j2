---
apiVersion: v1
kind: ConfigMap
metadata:
  labels:
    app: {{ app_name }}
    apb_name: '{{ apb_name }}'
    apb_plan_id: '{{ _apb_plan_id }}'
    apb_service_class_id: '{{ _apb_service_class_id }}'
    apb_service_instance_id: '{{ _apb_service_instance_id }}'
    component: {{ component }}
  name: "{{ app_name }}-global-config"
  namespace: {{ namespace }}
data:
  appname: {{ app_name }}
  git_repo: {{ project_git_repo }}
  git_ref: {{ project_git_ref }}
  domain_suffix: {{ domain_suffix }}
  backend_pv_storage_class: {{ backend_pv_storage_class }}
  binaries_pv_storage_class: {{ binaries_pv_storage_class }}