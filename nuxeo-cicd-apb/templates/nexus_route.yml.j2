---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  labels:
    app: {{ app_name }}
    apb_name: '{{ apb_name }}'
    apb_plan_id: '{{ _apb_plan_id }}'
    apb_service_class_id: '{{ _apb_service_class_id }}'
    apb_service_instance_id: '{{ _apb_service_instance_id }}'
    component: nexus
  name: "{{ nexus_route_name }}"
  namespace: {{ namespace }}
spec:
  host: {{ nexus_host }}
  path: /nexus
  port:
    targetPort: 8081-tcp
  to:
    kind: Service
    name: {{ nexus_service_name }}
    weight: 100
  wildcardPolicy: None