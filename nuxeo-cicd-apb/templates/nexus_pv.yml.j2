---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  labels:
    app: {{ app_name }}
    apb_name: '{{ apb_name }}'
    apb_plan_id: '{{ _apb_plan_id }}'
    apb_service_class_id: '{{ _apb_service_class_id }}'
    apb_service_instance_id: '{{ _apb_service_instance_id }}'
    component: nexus
  name: "{{ nexus_pvc_name }}"
  namespace: {{ namespace }}
  annotations:
    volume.beta.kubernetes.io/storage-class: {{ nexus_storage_class }}
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: {{ nexus_storage_capacity }}